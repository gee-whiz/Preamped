<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"


    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/fLoc"
        android:padding="5dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView

            android:tint="#ff8cc63e"
            android:id="@+id/imgLogo"
            android:src="@drawable/splash_logo"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <RelativeLayout
            android:id="@+id/xlo"
            android:layout_marginTop="2dp"
            android:background="#ff8cc63e"
            android:layout_below="@+id/imgLogo"
            android:layout_width="match_parent"
            android:layout_height="1dp">

        </RelativeLayout>

        <TextView
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="Outage Notifications"
            android:layout_marginTop="11dp"
            android:textColor="#ff8cc63e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />


        <TextView
  android:textAllCaps="true"
            android:paddingRight="10dp"
            android:layout_below="@+id/xlo"
            android:text="@string/notification"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/lstage"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ff8cc63e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </RelativeLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_weight="2"
            android:text="Ok"
            android:background="@color/transluscent_green"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/btnNotOk" />


    </LinearLayout>



</LinearLayout>