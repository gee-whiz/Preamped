<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@drawable/xborderless"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:padding="5dp"
    android:layout_below="@+id/fLoc"
        android:background="@drawable/xxxborder"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/imgLogo"
            android:scaleType="fitStart"
            android:src="@drawable/mcdonalds"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
          android:paddingLeft="20dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="McDonalds"
            android:textColor="#ff8cc63e"
            android:layout_centerHorizontal="true"
            android:id="@+id/mName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_below="@+id/mName"
            android:paddingLeft="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Fast Food"
            android:textColor="#ff8cc63e"
            android:layout_centerHorizontal="true"
            android:id="@+id/mText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
]

    </RelativeLayout>
        <ImageView

            android:id="@+id/imgcar"
            android:background="@drawable/xsmall_green"
            android:text="D"
            android:src="@drawable/cars"
            android:tint="@color/white"
            android:layout_marginStart="200dp"
            android:layout_marginLeft="380dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </RelativeLayout>
</LinearLayout>